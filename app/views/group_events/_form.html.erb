<%= form_with(model: [@user, @group_event], local: true )do |form| %>
  <% if group_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group_event.errors.count, "error") %> prohibited this group_event from being saved:</h2>

      <ul>
        <% group_event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, requried: true %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>
    <%= form.fields_for :location do |f| %>
    <div class="field">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :street %>
      <%= f.text_field :street %>
    </div>
    <div class="field">
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %>
    </div>
  <%end%>

  <div class="field" class="datetimepicker">
    <%= form.label :started_at %>
    <%= form.text_field :started_at %>
  </div>

  <div class="field">
    <%= form.label :ended_at %>
    <%= form.datetime_select :ended_at %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>