<div class="h1">
  <h1>Editing Group Event</h1>
</div>

<% flash.each do |type, msg| %>
  <div style="color: red; padding: 1rem">
    <%= msg %>
  </div>
<% end %>

<%= render 'form', group_event: @group_event %>

<div class="actions text-center" style="margin: 0.5rem">
  <%= link_to 'Back', user_path(@group_event.user), class: "btn btn-light" %>
</div>
